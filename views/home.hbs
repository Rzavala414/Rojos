        {{#each event}}
         <div>
             {{!-- editIcon helper function takes in data to parse --}}
             {{{editIcon user._id ../user _id}}}
             {{!-- trashIcon helper function takes in data to parse --}}
             {{{trashIcon user._id ../user _id}}}
