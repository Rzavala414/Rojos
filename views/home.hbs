            <h4>{{stripTags body}}</h4>
            <br>
         </div> 
        {{/each}}
            {{> _add_btn}}

    {{else}}
          {{#each event}}
         <div>
           <h3>{{stripTags eventDate}}</h3> 
            <h4>{{stripTags body}}</h4>
            <br>
         </div>    
        {{/each}}  
     
    {{/if}}
